@model Projekt_bazy.Models.Sprzet

@{
    ViewData["Title"] = "Edytuj sprzęt";
}

<h2>Edytuj sprzęt</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Nazwa Sprzętu</label>
        <input asp-for="NazwaSprzetu" class="form-control" />
        <span asp-validation-for="NazwaSprzetu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nazwa Magazynu</label>
        <input asp-for="NazwaMagazynu" class="form-control" />
        <span asp-validation-for="NazwaMagazynu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Data Wstawienia</label>
        <input asp-for="DataWstawienia" class="form-control" type="date" />
        <span asp-validation-for="DataWstawienia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Zapisz zmiany</button>
</form>